{
  "name": "switchboard",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/types",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "start": "cross-env VITE_USE_DEV_TOOLS=Y vite --strictPort --port 3000",
    "build": "vite build && tsc",
    "preview": "vite preview",
    "coverage": "vitest run --coverage",
    "lint": "eslint src/**/* --ext .ts,.tsx,.js,.jsx",
    "playwright": "pnpm exec playwright test --ui",
    "knip": "knip"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "ky": "^1.4.0",
    "react": ">16",
    "react-dom": ">16",
    "react-router-dom": "^6.25.1",
    "react-switchboard": "0.0.25",
    "react-use-keypress": "^1.3.1",
    "sonner": "^1.5.0",
    "tailwindcss": "^3.4.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.2",
    "@testing-library/dom": "^10.3.2",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^2.0.3",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "eslint": "^8.31.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^24.1.1",
    "knip": "^5.27.2",
    "msw": "^2.3.4",
    "postcss": "^8.4.39",
    "react-error-boundary": "^4.0.13",
    "rollup": "^4.19.0",
    "sass": "^1.77.8",
    "typescript": "^5.5.3",
    "vite": "^5.3.4"
  },
  "peerDependencies": {
    "react": ">16",
    "react-dom": ">16"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
